[user]
	email = hendrik.s.debruin@gmail.com
	name = Hendrik de Bruin
[core]
	excludesfile = ~/.gitignore_global
[alias]
	gr   = log --oneline --graph --decorate
	grs  = log --oneline --graph --decorate --branches
	grr  = log --oneline --graph --decorate --remotes
	grsr = log --oneline --graph --decorate --branches --remotes
	d    = difftool
	ds   = difftool --staged
	dst  = difftool --stat
	s    = status
	ss   = stash push --message
	su   = stash push --include-untracked --message
	sp   = stash pop
	sa   = stash apply
	sl   = stash list
	pl   = pull
	f    = fetch
	fa   = fetch --all
	r    = rebase
	t    = tag
	ta   = tag --annotate
	c    = commit
	m    = merge
	mt   = mergetool
	p    = push
	sub  = submodule update --init --recursive
	co   = checkout
	cob  = checkout -b
	b    = branch
	wip  = commit -m "WIP commit"
	eod  = commit -m "EOD commit"
	a    = add
	aa   = add --all
	undo = reset HEAD~1 --mixed
	cli  = clean --dry-run
	cl   = clean
	rem  = config --get remote.origin.url
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[merge]
	conflictstyle = diff3
	tool = vimdiff
	prompt = false
[pull]
	rebase = true
[fetch]
	prune = true
[mergetool]
	keepBackup = false
