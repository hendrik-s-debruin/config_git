[user]
	email = hendrik.s.debruin@gmail.com
	name = Hendrik de Bruin
[core]
	excludesfile = ~/.gitignore_global
	pager=less
	editor=vim
[alias]
	i       = init
	l       = log --oneline --graph --decorate --first-parent --no-merges
	gr      = log --oneline --graph --decorate
	grs     = log --oneline --graph --decorate --branches
	grr     = log --oneline --graph --decorate --remotes
	grsr    = log --oneline --graph --decorate --branches --remotes
	g       = log --oneline --graph --decorate --branches --remotes
	d       = difftool
	dh      = difftool HEAD
	dh1     = difftool HEAD~1
	ds      = difftool --staged
	dst     = difftool --stat
	dlf     = diff --name-only
	s       = status
	ss      = stash push --message
	su      = stash push --include-untracked --message
	sp      = stash pop
	sa      = stash apply
	sl      = stash list
	pl      = pull
	f       = fetch
	fa      = fetch --all
	r       = rebase
	t       = tag
	ta      = tag --annotate
	c       = commit
	ca      = commit --amend
	m       = merge
	mt      = mergetool
	p       = push
	pt      = push --tags
	tp      = push --tags
	psu     = push --set-upstream
	sub     = submodule update --init --recursive
	co      = checkout
	cob     = checkout -b
	b       = branch
	br      = branch --remotes
	bd      = branch --delete
	wip     = commit -m "WIP commit"
	eod     = commit -m "EOD commit"
	a       = add
	aa      = add --all
	undo    = reset HEAD~1 --mixed
	cln     = clean --dry-run
	clnn    = clean
	cl      = clone --recurse-submodules
	rem     = config --get remote.origin.url
	tohttps = convert-remote-to-https
	tossh   = convert-remote-to-ssh
	hash    = rev-parse HEAD
	untrack = rm --cached
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[merge]
	conflictstyle = diff3
	tool          = vimdiff
	prompt        = false
[pull]
	rebase = true
[fetch]
	prune = true
[mergetool]
	keepBackup = false
[init]
	defaultBranch = master
[push]
	default = current
[filter "lfs"]
	clean    = git-lfs clean -- %f
	smudge   = git-lfs smudge -- %f
	process  = git-lfs filter-process
	required = true
